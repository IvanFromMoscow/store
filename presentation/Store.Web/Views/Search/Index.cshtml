@model Book[]

@{
    ViewData["Title"] = "Результаты поиска";
}

<h2>Результаты поиска</h2>

@if (Model.Length == 0)
{
<p>
    <a asp-action="Create">Ничего не найдено.</a>
</p>
}
else
{
    <ul>
        @foreach(var book in Model)
        {
            <li><a href="@Url.Action("Index", "Book", new { id = book.Id})">@book.Title</a></li>
        }
    </ul>
}
